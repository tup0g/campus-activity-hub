@model CampusActivityHub.Models.Event
@{
    ViewData["Title"] = "Створити подію";
}

<h2>Створити подію</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group mb-3">
        <label>Назва події</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Дата</label>
        <input asp-for="Date" type="datetime-local" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Категорія</label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
            <option value="">Оберіть...</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Теги (через кому)</label>
        <input type="text" name="TagsString" class="form-control" placeholder="Наприклад: IT, Workshop, Free" />
    </div>
    <button type="submit" class="btn btn-primary">Зберегти</button>
</form>