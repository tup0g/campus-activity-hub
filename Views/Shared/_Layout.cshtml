<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Campus Activity Hub</title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #0f1115;
            color: #e0e0e0; 
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .navbar-custom {
            background: linear-gradient(90deg, #1e3a8a 0%, #7c3aed 100%); 
            box-shadow: 0 4px 20px rgba(124, 58, 237, 0.3); /* Неонове світіння */
            padding: 1rem;
        }

        .navbar-brand {
            font-weight: 800;
            font-size: 1.5rem;
            color: #fff !important;
            text-shadow: 0 2px 4px rgba(0,0,0,0.3);
        }

        .nav-link {
            color: rgba(255,255,255,0.8) !important;
            transition: 0.3s;
        }
        .nav-link:hover {
            color: #fff !important;
            text-shadow: 0 0 10px rgba(255,255,255,0.5);
        }

        /* Footer */
        footer {
            margin-top: auto;
            background: #161b22;
            border-top: 1px solid #30363d;
            padding: 20px 0;
            color: #8b949e;
        }
        
        /* Кнопки в меню */
        .btn-create-nav {
            background: rgba(255,255,255,0.1);
            border: 1px solid rgba(255,255,255,0.2);
            color: white;
            border-radius: 50px;
        }
        .btn-create-nav:hover {
            background: rgba(255,255,255,0.2);
            color: white;
            box-shadow: 0 0 15px rgba(255,255,255,0.3);
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark navbar-custom fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Events" asp-action="Index">
                    <i class="bi bi-cpu-fill me-2"></i>Campus Hub
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-md-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 align-items-center">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Events" asp-action="Index">Головна</a>
                        </li>
                        
                        @if (User.IsInRole("Admin") || User.IsInRole("Organizer"))
                        {
                            <li class="nav-item ms-lg-3">
                                <a class="btn btn-sm btn-create-nav px-3" asp-controller="Events" asp-action="Create">
                                    <i class="bi bi-plus-lg"></i> Створити
                                </a>
                            </li>
                        }
                    </ul>
                    
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container" style="margin-top: 100px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center text-small">
        <div class="container">
            &copy; 2025 - <strong>Campus Activity Hub</strong>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>